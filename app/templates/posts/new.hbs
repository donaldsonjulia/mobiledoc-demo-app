<section class="new-post-form">
  <h1 class="new-post-form__title">{{fa-icon "angle-right"}}New post:</h1>
  <form {{action "createPost" on="submit"}}>
      {{input type="text" placeholder="Subject" value=subject}}
      <div class="new-post-form__editor">
          {{#mobiledoc-editor
            on-change=(action 'mobiledocWasUpdated')
            as |editor|}}
            {{editor-toolbar editor=editor}}
          {{/mobiledoc-editor}}
      </div>
    {{#if showError}}
        <span class="new-post-form__error">Oops, an error occurred while posting...</span>
    {{/if}}
    <button class="new-post-form__submit-btn" type="submit" disabled={{formInvalid}}>SUBMIT</button>
  </form>
</section>
